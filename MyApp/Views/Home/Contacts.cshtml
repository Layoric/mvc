@inherits ServiceStack.Mvc.ViewPage
@using MyApp.ServiceModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="mt-8 mx-auto max-w-fit">
    <h1 class="@Html.ClassNames(Css.H1, "my-8")">@ViewData["Title"]</h1>
    <div id="contacts"></div>
    <div class="mt-16 flex justify-center gap-x-4">
        @Html.SrcPageMjs("Home/Contacts.mjs")
    </div>
    <h4 class="mt-8 text-center text-xl">
        <a href="/ui/GetContacts" class="@Css.Link">Manage Contacts</a> in API Explorer
    </h4>
</div>

<script>contactsApi = @await Html.ApiAsJsonAsync(new GetContacts())</script>
<script type="module">
import Contacts from "/pages/Home/Contacts.mjs"
import { mount } from "app.mjs"
mount("#contacts", Contacts, { contacts:contactsApi.results })
</script>